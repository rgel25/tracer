<%- layout('layout/boilerplate') %>

<div class="d-flex align-items-center justify-content-center login-page">
  <div class="card login-page-card m-2">
    <img
      src="/images/tracer-dark.png"
      class="card-img-top img-fluid login-page-logo"
      alt="tracer logo"
    />
    <div class="card-body">
      <h5 class="card-title text-center">Login to your account</h5>
      <form
        class="pt-2 needs-validation"
        novalidate
        action="/auth/login"
        method="POST"
      >
        <div class="mb-3">
          <label for="loginEmail" class="form-label"> Email address </label>
          <input
            type="email"
            class="form-control"
            id="loginEmail"
            autoFocus
            required
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="loginPassword" class="form-label"> Password </label>
          <input
            type="password"
            class="form-control"
            id="loginPassword"
            required
            name="password"
          />
        </div>
        <%- include("../../partials/flash") %>
